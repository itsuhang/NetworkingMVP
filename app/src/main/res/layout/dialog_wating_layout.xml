<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#77000000"
    app:cardCornerRadius="@dimen/dp8"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="@dimen/dialog_waitting_parent"
        android:layout_height="@dimen/dialog_waitting_parent">

        <ImageView
            android:id="@+id/wating"
            android:layout_width="@dimen/dialog_waitting_child"
            android:layout_height="@dimen/dialog_waitting_child"
            android:layout_gravity="center"
            android:src="@drawable/dialog_wating"
            />
    </FrameLayout>
</android.support.v7.widget.CardView>